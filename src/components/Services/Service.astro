---
const { title, description, imageSrc, imageAlt, reverse, id } = Astro.props;
---

<section class={`py-8 md:py-16 ${reverse ? 'bg-gray-50' : 'bg-white'}`} id={id}>
  <div class="container mx-auto px-4">
    <div
      class={`flex flex-col md:flex-row ${reverse ? 'md:flex-row-reverse' : ''} items-center gap-12`}
    >
      <!-- Texto -->
      <div class="md:w-1/2">
        <h3 class="text-2xl md:text-3xl font-bold text-blue-900 mb-4">
          {title}
        </h3>
        <p class="text-lg text-gray-700">
          {description}
        </p>
      </div>

      <!-- Imagen -->
      <div class="md:w-1/2">
        <div class="md:h-96 w-full">
          <img
            src={imageSrc}
            alt={imageAlt}
            class="rounded-lg shadow-lg w-full h-full object-cover object-center"
            loading="lazy"
          />
        </div>
      </div>
    </div>
  </div>
</section>
