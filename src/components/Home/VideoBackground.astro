---
import CallAndIcon from '../Global/CallAndIcon.astro';
---

<div class="relative max-w-full h-128 bg-black">
  <video
    autoplay
    muted
    loop
    class="w-0 h-0 lg:w-full lg:h-full lg:object-cover lg:object-center hidden lg:block"
  >
    <source src="/videos/isosceles_video_bg.mp4" type="video/mp4" />
    Your browser does not support the video tag.
  </video>
  <img
    src="/images/servicios.webp"
    alt="Isosceles Global Constructora"
    class="w-full h-full object-center object-cover lg:hidden"
  />
  <div class="absolute inset-0 h-full w-full bg-black opacity-60 lg:opacity-40">
  </div>
  <div
    class="absolute inset-0 z-30 w-2/4 h-1/6 text-white text-center mt-16 mb-auto mx-auto"
  >
    <div
      class="flex flex-col items-center h-full justify-center text-lg sm:text-xl lg:text-4xl gap-10 font-semibold"
    >
      <h2>Isósceles Global SL - Tu constructora nacional de confianza</h2>
    </div>
  </div>
  <div
    class="absolute inset-0 z-30 w-3/4 lg:w-2/4 h-1/6 bg-white opacity-90 mt-auto mb-16 mx-auto"
  >
    <div
      class="flex flex-col items-center h-full justify-center text-xl sm:text-3xl font-semibold"
    >
      <div class="text-center flex flex-col sm:flex-row gap-2 sm:gap-6">
        <div class="block sm:inline">
          <p class="block sm:inline text-gray-800">¡Llámanos!</p>
        </div>
        <CallAndIcon iconClass="size-6 sm:size-8" divClass="sm:inline" />
      </div>
    </div>
  </div>
</div>
